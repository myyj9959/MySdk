<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myyj.sdk.test" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="29" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.myyj.sdk.test"
        android:targetPackage="com.myyj.sdk.test" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true" >
        <uses-library android:name="android.test.runner" />
        <!-- BroadcastReceiver that listens for incoming SMS messages -->
        <receiver
            android:name="com.myyj.sdk.SmsReceiver"
            android:permission="android.permission.BROADCAST_SMS" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_DELIVER" />
            </intent-filter>
        </receiver> <!-- BroadcastReceiver that listens for incoming MMS messages -->
        <receiver
            android:name="com.myyj.sdk.MmsReceiver"
            android:permission="android.permission.BROADCAST_WAP_PUSH" >
            <intent-filter>
                <action android:name="android.provider.Telephony.WAP_PUSH_DELIVER" />

                <data android:mimeType="application/vnd.wap.mms-message" />
            </intent-filter>
        </receiver> <!-- Service that delivers messages from the phone "quick response" -->
        <service
            android:name="com.myyj.sdk.HeadlessSmsSendService"
            android:exported="true"
            android:permission="android.permission.SEND_RESPOND_VIA_MESSAGE" >
            <intent-filter>
                <action android:name="android.intent.action.RESPOND_VIA_MESSAGE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
            </intent-filter>
        </service>
        <service android:name="com.myyj.sdk.TimerService" />

        <provider
            android:name="com.qw.soul.permission.InitProvider"
            android:authorities="com.myyj.sdk.test.permission.provider"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>