<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/bindPhoneNumberText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:ems="11"
        android:hint="请输入手机号"
        android:minWidth="130dp"
        android:enabled="false"
        />

    <EditText
        android:id="@+id/bindServicePasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bindPhoneNumberText"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="请输入客服服务密码"
        android:inputType="textPassword"
        android:minWidth="130dp"
        />

    <TextView
        android:id="@+id/bindForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bindPhoneNumberText"
        android:layout_toRightOf="@+id/bindServicePasswordText"
        android:layout_marginTop="30dp"
        android:text="忘记客服密码？"
        android:textSize="16dp"
        android:textColor="@color/deepskyblue"
        />

    <EditText
        android:id="@+id/bindVerificationCodeText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bindServicePasswordText"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="请输入短信验证码"
        android:minWidth="130dp" />


    <Button
        android:id="@+id/bindButtonGetVerificationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bindServicePasswordText"
        android:layout_alignBottom="@+id/bindVerificationCodeText"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_toEndOf="@+id/bindVerificationCodeText"
        android:layout_toRightOf="@+id/bindVerificationCodeText"
        android:text="获取短信验证码"
        android:textSize="14dp"
        android:textStyle="normal" />

   <!-- <RadioButton
        android:id="@+id/bindRadioAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bindVerificationCodeText"
        android:text="勾选代表您已阅读并同意" />-->
    <CheckBox
        android:id="@+id/bindCheckAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bindVerificationCodeText"
        android:text="勾选代表您已阅读并同意" />


    <TextView
        android:id="@+id/bindTextAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bindButtonGetVerificationCode"
        android:layout_toRightOf="@+id/bindCheckAgreement"
        android:layout_marginTop="5dp"
        android:text="《移动用户授权协议》"
        android:textSize="16dp"
        android:textColor="@color/deepskyblue"
        />
    <Button
        android:id="@+id/bindButtonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bindCheckAgreement"
        android:layout_marginTop="20dp"
        android:text="确认提交"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="normal"
        />




</RelativeLayout>